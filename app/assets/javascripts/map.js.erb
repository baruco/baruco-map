//=require markerclusterer

(function(window){
  var map = undefined;
  var geocoder = new google.maps.Geocoder();
  var markers = [];
  var bounds = new google.maps.LatLngBounds();
  var markerClusterer = undefined;

  function createMap(){
    var myOptions = {
      zoom: 4,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    }
    map = new google.maps.Map(document.getElementById("map"), myOptions);
  }

  window.initMaps = function(url){
    $.getJSON(url, function(data){
      createMap();
      var times = 0;
      $.each(data, function(index, registration){
        if(registration.coordinates != undefined){
          var position = new google.maps.LatLng(
            registration.coordinates[0], registration.coordinates[1]
          );

          var marker = new google.maps.Marker({
              position: position,
              map: map,
              icon: "<%=asset_path('map.png').html_safe%>"
          });
          addMarker(marker);
        }
      });
      markerClusterer = new MarkerClusterer(map, markers, {
        maxZoom: 20,
        gridSize: 40,
        averageCenter: true,
        minimumClusterSize: 1,
        zoomOnClick: false,
        calculator: MarkerCalculator
      });
    });
  }

  function addMarker(marker){
    markers.push(marker);
    $.each(markers, function(index, marker){
      bounds.extend(marker.position);
    });
    map.fitBounds(bounds);
  }

  var MarkerCalculator = function (markers, numStyles) {
    var index = 0;
    var count = markers.length.toString();

    var dv = count;
    while (dv !== 0) {
      dv = parseInt(dv / 3, 10);
      index++;
    }

    index = Math.min(index, numStyles);
    return {
      text: count,
      index: index
    };
  };

})(window);
